{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node10",
    "module": "esnext",
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src", "test"]
}
